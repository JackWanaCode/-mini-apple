{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
        "@/*": ["src/*"]
        }
    },
    "include": ["src"],
    "references": [
        { "path": "./tsconfig.node.json" }
    ]
}